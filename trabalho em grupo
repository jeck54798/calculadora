        }

        input {
            width: calc(100% - 20px);
            padding: 12px;
            font-size: 18px;
            border-radius: 8px;
            border: 2px solid #95a5a6;
            margin-bottom: 20px;
            outline: none;
            transition: border-color 0.3s ease;
        }

        input:focus {
            border-color: #3498db;
        }

        /* Estilos do botão */
        button {
            width: 100%;
